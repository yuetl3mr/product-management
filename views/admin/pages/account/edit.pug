extends ../../layouts/default.pug
include ../../mixins/select-tree.pug
include ../../mixins/alert.pug
include ../../mixins/search.pug

block main
    +alert-error("5000")
    h1(class="mb-4") Edit account

    form(
      action=`${prefixAdmin}/account/edit`
      method="POST"
    )
        div(class="form-group mb-3")
            lable(for="fullName")  Full Name *
            input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
            )

        div(class="form-group mb-3")
            lable(for="email")  Email *
            input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            )

        div(class="form-group mb-3")
            lable(for="password")  Password *
            input(
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
            )
        div(class="form-group mb-3")
            lable(for="phone")  Phone Number 
            input(
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            )
        div(class="form-group mb-3")
            button(
            type="submit"
            class="btn btn-primary"
            ) Create
extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main
    h1 Products
    .card.mb-3 
        .card-header Filter & Search
        .card-body 
            .row
                .col-6 
                    +filter-status(filterStatus)
                .col-6.form 
                    +search(keyword)

    .card.mb-3 
        .card-header Product List 
            .card-body
                table.table.table-hover.table-sm
                        thead 
                            tr 
                                th No.
                                th Thumbnail
                                th Title
                                th Price
                                th Discount
                                th Status
                                th Action
                        tbody 
                            each item, index in products
                                tr
                                    td #{(pagination.currentPage - 1) * pagination.limitItems + index + 1}
                                    td 
                                        img(src=item.thumbnail, alt=item.thumbnail, width ="50px", height="auto")
                                    td #{item.title}
                                    td #{item.price}
                                    td #{item.discountPercentage}
                                    td 
                                        if(item.status == "active")
                                            a(
                                                href="javascript:;"
                                                data-status=item.status
                                                data-id=item.id
                                                button-change-status
                                                class="badge bg-success"
                                            ) Active
                                        else
                                            a(
                                                href="javascript:;"
                                                data-status=item.status
                                                data-id=item.id
                                                button-change-status
                                                class="badge bg-danger"
                                            ) Inactive

                                    td.action 
                                        button.btn.btn-warning.btn-sm Edit
                                        button.btn.btn-danger.btn-sm.ml-1 Delete
    +pagination(pagination)

    form(
      action=""
      method="POST"
      id="form-change-status"
      data-path=`${prefixAdmin}/products/change-status`
    )

    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`${prefixAdmin}/products/delete`
    )

    script(src="../admin/js/products.js")